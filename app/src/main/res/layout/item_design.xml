<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/tv_recycler"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:padding="36dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_recycler"
        app:layout_constraintTop_toTopOf="@+id/tv_recycler"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recycler"
        android:text="1"
        android:textSize="25sp"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/main_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_recycler"
        app:layout_constraintTop_toTopOf="@+id/tv_recycler"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recycler"
        android:text="Заголовок"
        android:textSize="24sp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:id="@+id/smallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_recycler"
        app:layout_constraintTop_toBottomOf="@+id/main_word"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recycler"
        android:text="Заголовок"
        android:textSize="20sp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="data"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>